  <div class="bg-white shadow-md rounded-md p-4">
    <h1 class="text-2xl font-semibold mb-4">Edycja zadania</h1>

    <%= render "form", task: @task %>

    <div class="mt-4 flex justify-between">
      <%= link_to "Pokaż to zadanie", @task, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Powrót do zadań", tasks_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
